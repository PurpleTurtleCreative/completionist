{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "landingPage": "/wp-admin/admin.php?page=ptc-completionist",
    "preferredVersions": {
        "php": "8.0",
        "wp": "6.4"
    },
    "phpExtensionBundles": [
        "kitchen-sink"
    ],
    "steps": [
        {
            "step": "setPhpIniEntry",
            "key": "display_errors",
            "value": "0"
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "wordpress.org/plugins",
                "slug": "completionist"
            },
            "options": {
                "activate": true
            }
        },
        {
            "step": "login"
        }
    ]
}
